<robot name="twolinkarm">
	
	<material name="black">
		<color rgba="0 0 0 0.7"/>
	</material>
	<material name="white">
		<color rgba="1 1 1 0.7"/>
	</material>
	<link name="base">

    </link>
	<link name="body">

    </link>

	<link name="link1">
		<visual>
			<geometry>
				<box size="1 .05 .05"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0.5 0 0"/>
			<material name="black"/>
		</visual>
       <inertial>
        <origin xyz="0.5 0 0" rpy="0 0 0"/>
         <mass value="1"/>
         <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
       </inertial>
	</link>

<joint name="base_joint_fixed" type="fixed">
		<axis rpy="0 0 0" xyz="0 -1 0"/>
		<parent link="base"/>
		<child link="body"/>
        <dynamics damping="0.0" friction="0.1"/>
	</joint>
	<joint name="base_joint" type="continuous">
		<axis rpy="0 0 0" xyz="0 -1 0"/>
		<parent link="body"/>
		<child link="link1"/>
        <dynamics damping="0.0" friction="0.1"/>
	</joint>

	<link name="link2">
		<visual>
			<geometry>
				<box size="1 .05 .05"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0.5 0 0"/>
			<material name="white"/>
		</visual>
       <inertial>
        <origin xyz="0.5 0 0" rpy="0 0 0"/>
         <mass value="1"/>
         <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
       </inertial>
	</link>

	<joint name="elbow_joint" type="continuous">
		<axis rpy="0 0 0" xyz="0 -1 0"/>
		<parent link="link1"/>
		<child link="link2"/>
		<origin rpy="0 0 0" xyz="1 0 0"/>
        <dynamics damping="0.0" friction="0.1"/>
	</joint>

	<link name="endEffector">
       <inertial>
         <origin xyz="0 0 0" rpy="0 0 0"/>
         <mass value="0"/>
         <inertia ixx="0." ixy="0.0" ixz="0.0" iyy="0." iyz="0.0" izz="0."/>
       </inertial>

    </link>

	<joint name="ee_joint" type="fixed">
		<parent link="link2"/>
		<child link="endEffector"/>
		<origin rpy="0 0 0" xyz="1 0 0"/>
        <dynamics damping="0.0" friction="0.0"/>
	</joint>

</robot>